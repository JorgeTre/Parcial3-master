<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ConfiguracionDeColor">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/settings"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="252dp"
            tools:layout_editor_absoluteX="94dp">

        <TextView android:layout_width="222dp"
                  android:layout_height="51dp"
                  android:layout_marginTop="52dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginEnd="8dp"
                  android:text="Color de Fondo"
                  android:textColor="#000"
                  android:textAlignment="center"
                  android:textSize="30dp"
                  app:layout_constraintHorizontal_bias="0.611"
                  android:id="@+id/textView5"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginEnd="8dp"
                  android:text="Color de Fondo"
                  android:textColor="#000"
                  android:textAlignment="center"
                  android:textSize="20dp"
                  app:layout_constraintHorizontal_bias="0.525" app:layout_constraintTop_toBottomOf="@+id/textView5"
                  android:layout_marginTop="44dp" android:id="@+id/textView2"/>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginEnd="8dp"
                  android:text="Color de Boton"
                  android:textColor="#000"
                  android:textAlignment="center"
                  android:textSize="20dp"
                  app:layout_constraintHorizontal_bias="0.522" android:layout_marginTop="38dp"
                  app:layout_constraintTop_toBottomOf="@+id/spnBackground" android:id="@+id/textView3"/>


        <Spinner
                android:id="@+id/spnBackground"
                android:layout_width="200dp"
                android:layout_height="37dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"
                android:text="Ajustes"
                android:background="@drawable/redon"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="35dp"
                app:layout_constraintHorizontal_bias="0.535" app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:layout_marginTop="16dp"/>


        <Spinner
                android:id="@+id/spnButton"
                android:layout_width="200dp"
                android:layout_height="37dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"
                android:text="Ajustes"
                android:background="@drawable/redon"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="35dp"
                app:layout_constraintHorizontal_bias="0.535" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"/>

        <Button
                android:id="@+id/btnOK"
                android:layout_width="123dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="36dp"
                android:text="Ok"

                app:cardCornerRadius="10dp"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spnButton" tools:ignore="MissingPrefix"
                app:layout_constraintHorizontal_bias="0.551"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>