<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragments.MenuFragment">


    <Button
            android:id="@+id/persons_activity"
            android:text="Personas"
            android:textColor="#fff"
            android:textSize="22dp"
            android:background="@drawable/bg"
            android:layout_width="192dp"
            android:layout_height="57dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="64dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/employees_activity"
            android:text="Empleados"
            android:textSize="22dp"
            android:textColor="#fff"
            android:background="@drawable/bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="192dp"
            android:layout_height="57dp" app:layout_constraintHorizontal_bias="0.492"
            android:layout_marginTop="27dp" app:layout_constraintTop_toBottomOf="@+id/persons_activity"/>


    <Button
            android:id="@+id/expenditure_activity"
            android:text="Gastos Por empleado"
            android:textColor="#fff"
            android:background="@drawable/bg"
            android:layout_width="192dp"
            android:textSize="22dp"
            android:layout_height="57dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.492" android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/employees_activity"/>




</androidx.constraintlayout.widget.ConstraintLayout>